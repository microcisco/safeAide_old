<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <TextView
        android:text="手机防盗"
        style="@style/tv_title"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:layout_height="wrap_content">

       <TextView
           android:layout_width="wrap_content"
           android:text="安全号码"
           android:textSize="18sp"
           android:textColor="#000"
           android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_setup5_phone"
            android:layout_width="wrap_content"
            android:text="18627752172"
            android:textColor="#000"
            android:textSize="18sp"
            android:layout_alignParentRight="true"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:text="防盗保护状态"
            android:textSize="18sp"
            android:layout_centerVertical="true"
            android:textColor="#000"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/iv_setup5_state"
            android:layout_centerVertical="true"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:src="@drawable/unlock"
            android:layout_alignParentRight="true"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

    <Button
        android:onClick="reSetup"
        android:text="重新进入设置向导"
        android:textColor="#fff"
        android:textSize="18sp"
        android:layout_width="match_parent"
        android:background="@drawable/btn_selector"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:text="功能简介"
        android:background="#c9c8c8"
        android:textSize="20sp"
        android:layout_height="wrap_content"/>



    <TextView
        style="@style/tv_setup1"
        android:text="GPS追踪#*location*#"/>

    <TextView
        android:layout_marginTop="10dp"
        style="@style/tv_setup1"
        android:text="播放报警音乐#*alarm*#"/>

    <TextView
        android:layout_marginTop="10dp"
        style="@style/tv_setup1"
        android:text="远程删除数据#*wipedate*#"/>

    <TextView
        android:layout_marginTop="10dp"
        style="@style/tv_setup1"
        android:text="远程锁屏#*lockscreen*#"/>

</LinearLayout>